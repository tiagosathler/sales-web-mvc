@model IEnumerable<SalesWebMVC.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaseSalary)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach(var item in Model)
            {
               <tr>
                   <td>
                       @Html.DisplayFor(modelItem => item.Name)
                   </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        $&nbsp;@Html.DisplayFor(modelItem => item.BaseSalary)
                    </td>
                    <td>
                        <div class="container text-center">
                            <div class="row align-items-center">
                                <div class="col-sm-4">
                                    <a
                                        asp-action="Edit"
                                        asp-route-id="@item.Id"
                                        role="button"
                                        class="link-warning link-underline link-underline-opacity-0"
                                        data-bs-toggle="tooltip" data-bs-title="Edit"
                                    >
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </div>
                                <div class="col-sm-4">
                                    <a
                                        asp-action="Details"
                                        asp-route-id="@item.Id"
                                        role="button"
                                        class="link-success link-underline link-underline-opacity-0"
                                        data-bs-toggle="tooltip" data-bs-title="Details"
                                    >
                                        <i class="bi bi-binoculars-fill"></i>
                                    </a>
                                </div>
                                <div class="col-sm-4">
                                    <a
                                        asp-action="Delete"
                                        asp-route-id="@item.Id"
                                        role="button"
                                        class="link-danger link-underline link-underline-opacity-0"
                                        data-bs-toggle="tooltip" data-bs-title="Delete"
                                    >
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>
               </tr>
            }
        </tbody>
    </table>
</div>
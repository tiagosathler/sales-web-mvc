@model IEnumerable<SalesWebMVC.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="container-fluid text-end">
                            <div class="column align-items-center">
                                <a asp-action="Edit"
                                    asp-route-id="@item.Id"
                                    role="button"
                                    class="link-warning link-underline link-underline-opacity-0 mx-1"
                                    data-bs-toggle="tooltip" data-bs-title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details"
                                    asp-route-id="@item.Id"
                                    role="button"
                                    class="link-success link-underline link-underline-opacity-0 mx-1"
                                    data-bs-toggle="tooltip" data-bs-title="Details">
                                    <i class="bi bi-binoculars-fill"></i>
                                </a>
                                <a asp-action="Delete"
                                    asp-route-id="@item.Id"
                                    role="button"
                                    class="link-danger link-underline link-underline-opacity-0 mx-1"
                                    data-bs-toggle="tooltip" data-bs-title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
